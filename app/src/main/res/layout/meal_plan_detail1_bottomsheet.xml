<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/txt_plan_detail_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Basic Plan"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/montserrat_bold"/>

    <ImageView
        android:layout_width="315dp"
        android:layout_height="313dp"
        android:src="@drawable/basicplan" />

    <TextView
        android:id="@+id/txt_plan_detail_desc1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_18pt_regular"
        android:justificationMode="inter_word"
        android:lineSpacingExtra="4dp"
        android:text="Basic Plan cocok untuk kamu yang ingin memulai pola makan sehat tanpa menguras dompet. Dalam paket ini, kamu akan mendapatkan 1 kali makan sehat setiap hari selama 6 hari kerja. Semua menu dirancang oleh koki profesional dengan gizi seimbang, tanpa pengawet, dan menggunakan bahan segar lokal."
        android:layout_marginTop="12dp" />

</LinearLayout>
