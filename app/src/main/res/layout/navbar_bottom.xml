<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Coral">

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="72dp"
        android:layout_height="64dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="Logo Sea Catering"
        android:src="@mipmap/ic_logo_round"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/logoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEA Catering"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:fontFamily="@font/montserrat_bold"
        app:layout_constraintStart_toEndOf="@id/logoImage"
        app:layout_constraintTop_toTopOf="@id/logoImage"
        app:layout_constraintBottom_toBottomOf="@id/logoImage"
        app:layout_constraintEnd_toStartOf="@id/hamburgerIcon"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical"/>

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/hamburgerIcon"
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:paddingBottom="15dp"
        android:title="SEA Catering"
        android:titleTextColor="@android:color/white"
        app:buttonGravity="center_vertical"
        app:logoScaleType="fitStart"
        app:navigationIcon="@drawable/baseline_menu_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
